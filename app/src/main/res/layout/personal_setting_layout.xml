<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:gravity="center_horizontal"
        android:paddingHorizontal="10dp"
        >

        <ImageView
            android:id="@+id/search_profile_picture"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_marginVertical="10dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/sample"/>
            <!--app:civ_border_color="@color/green"
            app:civ_border_width="3dp"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="2dp"
            android:text="Nguyen Van An"
            android:textColor="@color/black"
            android:textSize="25sp" />

            <TextView
            android:id="@+id/contact_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="nguyenvanan@connection.dek.vn"
            android:textColor="@color/black"
            android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="150dp"
        android:paddingHorizontal="10dp"
        >
        <Button
            android:id="@+id/phonebookImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/phonebook"/>
        <TextView
            android:id="@+id/phonebookText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Contacts"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="230dp"
        android:paddingHorizontal="10dp"
        >
        <ImageView
            android:id="@+id/groupImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/group"/>
        <TextView
            android:id="@+id/groupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Group"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginVertical="390dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <ImageView
            android:id="@+id/settingImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/shield" />

        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Account Setting"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginVertical="480dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <ImageView
            android:id="@+id/logOutImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/logout" />

        <TextView
            android:id="@+id/logOutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="Log Out"
            android:textColor="@color/red"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>